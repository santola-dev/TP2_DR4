@page
@model CityManager.Pages.CountryManager.CreateCountryModel

@{
    ViewData["Title"] = "Criar País";
}

<h2>Criar País</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Input.CountryName" class="form-label"></label>
        <input asp-for="Input.CountryName" class="form-control" />
        <span asp-validation-for="Input.CountryName" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="Input.CountryCode" class="form-label"></label>
        <input asp-for="Input.CountryCode" class="form-control" />
        <span asp-validation-for="Input.CountryCode" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-4">Salvar</button>
</form>

@if (Model.CreatedCountry != null)
{
    <div class="alert alert-success mt-4">
        País <strong>@Model.CreatedCountry.CountryName</strong> com código
        <strong>@Model.CreatedCountry.CountryCode</strong> foi criado com sucesso!
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
